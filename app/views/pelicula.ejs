      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link js-scroll-trigger" href="#about">About</a>
          </li>
          <li class="nav-item">
            <a class="nav-link js-scroll-trigger" href="#experience">Peliculas</a>
          </li>
        </ul>
      </div>
    </nav>

    <div class="container-fluid p-0">

      <section class="resume-section p-3 p-lg-5 d-flex d-column" id="about">
        <div class="my-auto">
          <h1 class="mb-0">Práctica
            <span class="text-primary">DSI</span>
          </h1>
          <div class="subheading mb-5">Práctica de laboratorio de Expresiones regulares y Patrones de Diseño
            <a href="">Desarrollo Sistemas Informáticos</a>
          </div>
          <p class="mb-5">Esto es un prototipo de plataforma web, basada en los principios del modelo de vista controlador, comummente conocido como MVC</p>
          <ul class="list-inline list-social-icons mb-0">
            <li class="list-inline-item">
              <a href="#">
                <span class="fa-stack fa-lg">
                  <i class="fa fa-circle fa-stack-2x"></i>
                  <i class="fa fa-github fa-stack-1x fa-inverse"></i>
                </span>
              </a>
            </li>
          </ul>
        </div>
      </section>

      <section class="resume-section p-3 p-lg-5 d-flex flex-column" id="experience">
        <div class="my-auto">
          <h2 class="mb-5">Base de Datos de Películas</h2>

          <div class="resume-item d-flex flex-column flex-md-row mb-5">
            <div class="resume-content mr-auto">
              <h3 class="mb-0">Sección de introducción</h3>
              <div class="subheading mb-3">Introduza los datos de su película favorita</div>

                <form class="form-horizontal" role="form" method="post" action="/pelicula">
                  <div class="form-group">
                    <label for="inputNombre" class="col-lg-2 control-label">Nombre</label>
                    <div class="col-lg-10">
                      <!-- Expresión regular solo acepta letras -->
                      <input type="text" class="form-control" name="nombre" id="nombre" pattern="^[a-zA-Z ]*$" title="Introduzca sólo letras" placeholder="Introduzca nombre" required>
                    </div>
                    <label for="inputDirector" class="col-lg-2 control-label">Director</label>
                    <div class="col-lg-10">
                      <input type="text" class="form-control" name="director" id="director" placeholder="Introduzca director" required>
                    </div>
                    <label for="inputGenero" class="col-lg-2 control-label">Género</label>
                    <div class="col-lg-10">
                      <input type="text" class="form-control" name="genero" id="genero" placeholder="Introduzca genero" required>
                    </div>
                    <label for="inputPuntuacion" class="col-lg-2 control-label">Puntuación</label>  
                    <div class="col-lg-10">
                      <!-- Expresión regular solo acepta numeros del 1 al 10 -->
                      <input type="text" class="form-control" name="puntuacion" id="puntuacion" pattern="^(?:[1-9]|0[1-9]|10)$" title="Introduzca un dígito del 1 al 10" placeholder="Introduzca puntuacion" required>
                    </div>
                    <label for="inputEstreno" class="col-lg-2 control-label">Estreno</label>
                    <div class="col-lg-10">
                      <input type="text" class="form-control" name="estreno" id="estreno" placeholder="Introduzca estreno" required>
                    </div>
                    <label for="inputDuracion" class="col-lg-2 control-label">Duración</label>
                    <div class="col-lg-10">
                      <input type="text" class="form-control" name="duracion" id="duracion" placeholder="Introduzca duracion" required>
                    </div>
                  </div>                  
                  <button type="submit" class="btn btn-success">Añadir</button>
                </form>

                <h2> Peliculas: </h2>
                <div class="container">          
                      <table class="table table-striped">
                        <thead>
                          <tr>
                            <th>Nombre</th>
                            <th>Director</th>
                            <th>Genero</th>
                            <th>Puntuacion</th>
                          </tr>
                        </thead>
                        <tbody> 
                          <%for (var i=0; i<peliculas.length; i++) {%>
                          <tr>
                            <td><%=peliculas[i].nombre%></td>
                            <td><%=peliculas[i].director%></td>
                            <td><%=peliculas[i].genero%></td>
                            <td><%=peliculas[i].puntuacion%></td>
                          </tr>
                           <% } %>
                        </tbody>
                      </table>
            </div>
          </div>

        </section>


    <!-- Bootstrap core JavaScript -->
    <script src="./vendor/jquery/jquery.min.js"></script>
    <script src="./vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Plugin JavaScript -->
    <script src="./vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for this template -->
